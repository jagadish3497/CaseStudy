extends layout

block content
  form(method='POST')
    legend Signup
    .form-group
      label(for='name') Name
      input.form-control(type='text', name='name', autofocus required)
    .form-group
      label(for='username') Username
      input.form-control(type='text', name='username', autofocus required)
    .form-group
      label(for='email') Email
      input.form-control(type='text', name='email' required)
      .form-group
      label(for='number') Mobile Number
      input.form-control(type='text', name='number', autofocus required)
    .form-group
      label(for='password') Password
      input.form-control(type='password', name='password' required)
    .form-group
      label(for='confirm') Confirm Password
      input.form-control(type='password', name='confirm' required)
    button.btn.btn-primary(type='submit') Signup