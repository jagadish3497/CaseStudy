extends layout

block content
  form(method='POST')
    legend Owner Login
    .form-group
      label(for='username') Username
      input.form-control(type='text', name='username', autofocus=true,required)
    .form-group
      label(for='password') Password
      input.form-control(type='password', name='password',required)
    button.btn.btn-primary(type='submit') Login
    a.btn.btn-link(href='/forgot') Forgot Password?